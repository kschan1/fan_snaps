<!DOCTYPE html>
<html>
  <head>
    <title>FanSnaps</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">

      <div class = "navbar navbar-inverse navbar-fixed-top">
        <div class="container">

          <div class="navbar-header">
            <a class="navbar-brand" href="/posts">Fan Snaps</a>
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse navHeaderCollapse">
            <% if logged_in? %>
              <%= form_tag '/login', method: 'delete', class: 'navbar-form navbar-right' do %>
                <button class="btn btn-default">logout</button>
              <% end %>
              <p class="navbar-text navbar-right"><i class="fa fa-user-o"></i> <%= current_user.username %></p>
            <% else %>
              <a class="btn btn-default navbar-btn navbar-right" href="/login">Log In</a>
            <% end %>
          </div>

        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
