<!DOCTYPE html>
<html>
  <head>
    <title>FanSnaps</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container main">

      <div class = "navbar navbar-default navbar-fixed-top">
        <div class="container">

          <div class="navbar-header">
            <a class="navbar-brand" href="/posts">Fan Snaps</a>
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>

          <div class="collapse navbar-collapse navHeaderCollapse">
            <ul class="nav navbar-nav navbar-right">
              <% if logged_in? %>
                <li><a href="/posts/new">Upload</a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-o"></i> <%= current_user.username %> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= form_tag '/login', method: 'delete' do %>
                      <button class="drop-button">Log Out</button>
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><a href="/signup">Sign Up</a></li>
                <li><a href="/login">Log In</a></li>
              <% end %>
            </ul>
          </div>

        </div>
      </div>

      <div class="content">
        <%= yield %>
      </div>

      <footer>
        <div class="text-center">Designed by KSChan</div>
      </footer>
    </div>
  </body>
</html>
